<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rLayoutItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtNameMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imgMovie"
        android:layout_toRightOf="@+id/imgMovie"
        android:padding="8dp"
        android:text="Name Movie"
        android:textSize="18sp" />

    <RatingBar
        android:id="@+id/averageMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgMovie"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/imgMovie"
        android:layout_toRightOf="@+id/imgMovie"
        android:drawingCacheQuality="auto"
        android:filterTouchesWhenObscured="false"
        android:hapticFeedbackEnabled="false"
        android:isIndicator="true"
        android:numStars="10"
        android:saveEnabled="false" />

    <ImageView
        android:id="@+id/imgMovie"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

</RelativeLayout>
